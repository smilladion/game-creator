<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/stage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#?"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_component_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/add_component"
            android:textSize="12sp"
            android:focusable="false" />
    </LinearLayout>

    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/add_solution_component_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/add_solution_component"
            android:textSize="12sp"
            android:focusable="false" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_stage"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="?android:attr/selectableItemBackground"
            app:icon="@drawable/ic_baseline_delete_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="18dp"
            android:focusable="false" />
    </LinearLayout>
</LinearLayout>
